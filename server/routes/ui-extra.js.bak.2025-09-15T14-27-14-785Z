const fs = require("fs");
const path = require("path");
const DATA_PATH = path.join(__dirname, "..", "..", "data", "ui.json");

function readUI() {
  try { return JSON.parse(fs.readFileSync(DATA_PATH, "utf8")); } catch { return { highlights: [], categoryFeatured: {} }; }
}
function writeUI(obj) {
  fs.mkdirSync(path.dirname(DATA_PATH), { recursive: true });
  fs.writeFileSync(DATA_PATH, JSON.stringify(obj, null, 2));
}

module.exports = (app /*, db, mw */) => {
  app.get("/api/ui", (req, res) => res.json(readUI()));

  app.post("/api/admin/ui", (req, res) => {
    const body = req.body || {};
    const ui = { highlights: body.highlights || [], categoryFeatured: body.categoryFeatured || {} };
    writeUI(ui);
    res.json(ui);
  });

  app.post("/api/admin/categories/:id/feature", (req, res) => {
    const id = req.params.id;
    const { featured } = req.body || {};
    const ui = readUI();
    ui.categoryFeatured = ui.categoryFeatured || {};
    ui.categoryFeatured[id] = !!featured;
    writeUI(ui);
    res.json({ ok: true, categoryFeatured: ui.categoryFeatured });
  });
};
